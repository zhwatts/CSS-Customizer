{
  "name": "Iframe Styler",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Toggle custom CSS on an iframe by ID, used to maximize Duke class videos.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/maximizer-icon-off.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
